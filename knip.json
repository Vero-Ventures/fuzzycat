{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "server/**/*.ts",
    "types/**/*.ts",
    "scripts/*.ts",
    "e2e/**/*.ts"
  ],
  "project": ["**/*.{ts,tsx}"],
  "ignore": ["drizzle/**", "drizzle.config.ts", "components/ui/**"],
  "ignoreBinaries": ["gitleaks", "semgrep"],
  "drizzle": false,
  "ignoreDependencies": [
    "@commitlint/cli",
    "@radix-ui/*",
    "postcss",
    "radix-ui",
    "shadcn",
    "tw-animate-css"
  ]
}
