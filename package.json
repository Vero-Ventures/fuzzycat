{
  "name": "fuzzycat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev --turbopack",
    "build": "bun --bun next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "ci": "biome ci . && tsc --noEmit && bun run check:circular && bun run check:secrets",
    "check:circular": "madge --circular --extensions ts,tsx .",
    "check:unused": "knip",
    "check:types": "type-coverage --at-least 95 --strict",
    "check:licenses": "license-checker-rseidelsohn --onlyAllow 'MIT;ISC;Apache-2.0;BSD-2-Clause;BSD-3-Clause;0BSD;CC0-1.0;CC-BY-3.0;CC-BY-4.0;BlueOak-1.0.0;Unlicense;Python-2.0;MPL-2.0;MIT OR Apache-2.0;(BSD-2-Clause OR MIT OR Apache-2.0);(MIT AND CC-BY-3.0);(MIT OR CC0-1.0)' --excludePackagesStartingWith '@img/sharp-libvips' --excludePrivatePackages",
    "check:secrets": "gitleaks detect --source . --no-banner",
    "check:security": "semgrep scan --config auto --error --quiet .",
    "check:all": "bun run ci && bun run check:unused && bun run check:types && bun run check:licenses",
    "test": "bun test",
    "test:e2e": "playwright test",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run scripts/seed.ts"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "^15",
    "radix-ui": "^1.4.3",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "knip": "^5.83.1",
    "license-checker-rseidelsohn": "^4.4.2",
    "madge": "^8.0.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "type-coverage": "^2.29.7",
    "typescript": "^5"
  }
}
