{
  "name": "fuzzycat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev --turbopack",
    "build": "bun --bun next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "ci": "biome ci . && tsc --noEmit && bun run check:circular && bun run check:secrets",
    "check:circular": "madge --circular --extensions ts,tsx .",
    "check:unused": "knip",
    "check:types": "type-coverage --at-least 95 --strict",
    "check:licenses": "license-checker-rseidelsohn --onlyAllow 'MIT;ISC;Apache-2.0;BSD-2-Clause;BSD-3-Clause;0BSD;CC0-1.0;CC-BY-3.0;CC-BY-4.0;BlueOak-1.0.0;Unlicense;Python-2.0;MPL-2.0;MIT OR Apache-2.0;(BSD-2-Clause OR MIT OR Apache-2.0);(MIT AND CC-BY-3.0);(MIT OR CC0-1.0)' --excludePackagesStartingWith '@img/sharp-libvips' --excludePrivatePackages",
    "check:secrets": "gitleaks detect --source . --no-banner",
    "check:security": "semgrep scan --config auto --error --quiet .",
    "check:all": "bun run ci && bun run check:unused && bun run check:types && bun run check:licenses",
    "test": "bun test lib server app",
    "test:e2e": "playwright test",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run scripts/seed.ts",
    "db:create-admin": "bun run scripts/create-admin.ts"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.39.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.95.3",
    "@tanstack/react-query": "^5.90.21",
    "@trpc/client": "^11.10.0",
    "@trpc/server": "^11.10.0",
    "@trpc/tanstack-react-query": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.564.0",
    "next": "^16",
    "postgres": "^3.4.8",
    "posthog-js": "^1.351.3",
    "posthog-node": "^5.24.17",
    "radix-ui": "^1.4.3",
    "react": "^19",
    "react-dom": "^19",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.4.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/bun": "^1.3.9",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.9",
    "knip": "^5.83.1",
    "license-checker-rseidelsohn": "^4.4.2",
    "madge": "^8.0.0",
    "shadcn": "^3.8.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "type-coverage": "^2.29.7",
    "typescript": "^5"
  }
}
